<script src="~/js/knockout.js" type="text/javascript"></script>
<script src="~/js/Details.js" type="text/javascript"></script>

<h2>Details</h2>

<button data-bind="click: function() { fetch()}" class="btn btn-success">Display Accounts</button>
<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Email
            </th>
            <th>
                Gender
